---
const { left, center, right } = Astro.props;
---

<div class="header-row">
	<div class="header-box">
		<slot name="left" />
	</div>

	<div class="header-box">
		<slot name="center" />
	</div>

	<!--<div class="header-box">
		<slot name="right" />
	</div> -->
</div>

<style>
	:host {
        display: block;
		max-width: 720px;
        width: 100%;
		margin: 0 auto;
		box-sizing: border-box;
    }

	.header-row {
		display: grid;
		grid-template-columns: 26% 54% 20%;
		gap: 1rem;
		height: 110px;
		margin-bottom: 1px;
		width: 100%;
		margin-top: 1rem;
		box-sizing: border-box;
		align-items: stretch;
	}

	.header-box {
		position: relative;
		overflow: hidden;
		min-width: 0;
		height: 100%;
		display: flex;
		align-items: stretch;
	}

	body.dark .header-box {
		border-color: #333;
		background: #181818;
	}
</style>