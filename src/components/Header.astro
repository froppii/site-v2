---
const { left, center, right } = Astro.props;
---

<div class="header-row">
	<div class="header-box">
		<slot name="left" />
	</div>

	<div class="header-box">
		<slot name="center" />
	</div>

	<div class="header-box">
		<slot name="right" />
	</div>
</div>

<style>
	:host {
        display: block;
        width: 100%;
        height: 100%;
    }

	.header-row {
		display: grid;
		grid-template-columns: 26% 54% 20%;
		gap: 1rem;
		height: 120px;
		margin-bottom: 0.75rem;
		margin-top: 1rem;
		align-items: stretch;
	}

	.header-box {
		position: relative;
		overflow: hidden;
		min-width: 0;
		height: 100%;
		display: flex;
		align-items: center;
	}

	body.dark .header-box {
		border-color: #333;
		background: #181818;
	}
</style>