---
interface Props {
    title: string;
    logo: string;
    alt?: string;
}

const { title, logo, alt = title } = Astro.props;
---

<div class="stop-info">
    <div class="stop-title">{title}</div>
    <img src={logo} alt={alt} class="stop-logo" loading="eager" decoding="async" />
</div>

<style>
    .stop-info {
        display: grid;
        grid-template-columns: 1fr auto;
        grid-template-rows: auto auto;
        grid-template-areas: "title title" "logo logo";
        border: 3px solid #ff4507;
        width: 100%;
        height: 100%;
        box-sizing: border-box;
        padding: 0.6rem;
        row-gap: 0.1rem;
    }

    .stop-logo {
        grid-area: logo;
        width: clamp(20px, 7vw, 28px);
        height: clamp(20px, 7vw, 28px);
        object-fit: contain;
    }

    .stop-title {
        grid-area: title;
        font-weight: 800;
        font-size: clamp(1rem, 3.8vw, 1.6rem);
        color: #fff;
        line-height: 1.05;
        white-space: normal;
        word-break: break-word;
        overflow-wrap: anywhere;
    }
</style>