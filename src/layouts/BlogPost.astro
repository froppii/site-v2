---
import { Image } from 'astro:assets';
import FormattedDate from '../components/FormattedDate.astro';

const { post } = Astro.props;
---

<style>
  .blog-post {
    display: flex;
    border: 2px solid #ddd;
    background: #000;
    color: white;
    align-items: center;
    height: 140px;
    margin-bottom: 1rem;
  }

  .image-wrapper {
    height: 140px;
    width: 160px;
    overflow: hidden;
    line-height: 0;
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    vertical-align: bottom;
  }

  .text-content {
    flex: 1;
    padding: 1rem;
  }

  .title {
    font-size: 1.25rem;
  }

  .description {
    font-size: 16px;
    color: #ccc;
  }

  .date {
    font-size: 0.85rem;
    color: #888;
  }
</style>

<div class="blog-post">
  {post.data.heroImage && (
    <div class="image-wrapper">
      <Image src={post.data.heroImage} alt={post.data.title} loading="lazy" width={700} height={700} />
    </div>
  )}
  <div class="text-content">
    <h4 class="title">{post.data.title}</h4>
    <p class="description">{post.data.description}</p>
    <p class="date"><FormattedDate date={post.data.pubDate} /></p>
  </div>
</div>
